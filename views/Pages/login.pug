doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        link(rel="stylesheet", href="/stylesheets/mystyle.css")
        script(src="https://cdn.tailwindcss.com")
    body 
    
    div(class="w-full flex justify-center min-h-screen")
        div(class="flex flex-col gap-5 justify-center items-center mt-40 p-4 bg-sky-600 rounded-xl shadow-md shadow-gray-500 w-[90%] md:w-[50%] h-[90%]")
           h2(class="text-2xl font-sans font-bold") Login Here 
           form(action="/submitform" method="post",class="flex flex-col gap-5 justify-center items-center")
            input(class="bg-white p-2 rounded border border-gray-500/40 focus:outline-none text-black", type="text", name="username", placeholder="Enter the Username")
            input(class="bg-white p-2 rounded border border-gray-500/40 focus:outline-none text-black", type="password", name="password", placeholder="Enter the Password")
            button(type="submit" class="pl-4 pr-4 pt-2 pb-2 bg-green-500 rounded-xl hover:bg-green-700/90") Login
            a(href="/forgetpassword", class="text-blue-600 text-sm font-bold hover:underline") forget-password?
